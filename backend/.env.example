# Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@localhost:5432/farm_resort

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# Admin Setup (used for seeding)
ADMIN_EMAIL=admin@farmresort.com
ADMIN_INITIAL_PASSWORD=changeme123

# GreenAPI WhatsApp (optional)
GREENAPI_ENABLED=false
GREENAPI_INSTANCE_ID=
GREENAPI_API_TOKEN=

# Cloudinary (cloud name exposed to frontend via /api/config)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_UPLOAD_PRESET=nahl_onboarding

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
